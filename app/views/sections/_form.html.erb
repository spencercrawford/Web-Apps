<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.collection_select :course_id, Course.order(:name), :id, :name, prompt: "Course", required: true, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :semester %>
    <%= form.text_field :semester, required: true, autofocus: true, placeholder: "Semester" %>
  </div>

  <div class="field">
    <%= form.label :room_number %>
    <%= form.number_field :room_number, required: true, autofocus: true, placeholder: "Room Number" %>
  </div>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number, required: true, autofocus: true, placeholder: "Number" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
